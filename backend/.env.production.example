# Production Environment Variables
# Use these keys in your deployment dashboard (e.g. Vercel, Render, Railway)

# Database: Must be a transaction-pooled connection string (e.g. Supabase Transaction Mode)
DATABASE_URL="postgres://user:pass@host:5432/db?pgbouncer=true"

# APIs: Fresh keys for production
GROQ_API_KEY="gsk_production_key_here"
GEMINI_API_KEY="AIza_production_key_here"

# Frontend: The URL of your deployed frontend
FRONTEND_URL="https://your-app-name.vercel.app"

# Settings
MAX_MESSAGE_LENGTH=2000
MAX_CONTEXT_MESSAGES=10
